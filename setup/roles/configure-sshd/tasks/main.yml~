- name: Configuring sshd
  become: yes
  template:
    src: sshd_config.j2
    det: /etc/ssh/sshd_config
    backup: yes
    owner: root
    group: root
    mode: "0644"
  notify: restart sshd
- name: Patching sshd moduli
  become: yes
  copy:
    src: ../files/moduli
    det: /etc/ssh/moduli
    backup: yes
    owner: root
    group: root
    mode: "0644"
  notify: restart sshd